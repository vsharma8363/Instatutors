<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/orange"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="greycubelabs.tutor.instatutors.Credentials"
    android:touchscreenBlocksFocus="false">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instatutors"
        android:id="@+id/SettingsTitle"
        android:textSize="40dp"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SettingsTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/SettingsDivider">

        <View
            android:layout_weight="40"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Settings"
            android:id="@+id/SettingsTextDivider"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="25dp"/>

        <View
            android:layout_weight="40"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            />

    </LinearLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tutor"
        android:id="@+id/tutor"
        android:checked="false"
        android:onClick="onCheckBoxClicked"
        android:layout_below="@+id/SettingsDivider"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/SettingsTitle"
        android:layout_alignBottom="@+id/tutee"
        android:layout_toLeftOf="@+id/SettingsTitle" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tutee"
        android:id="@+id/tutee"
        android:checked="false"
        android:onClick="onCheckBoxClicked"
        android:layout_below="@+id/SettingsDivider"
        android:layout_toRightOf="@+id/SettingsTitle"
        android:layout_toEndOf="@+id/SettingsTitle" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".40"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="School Name"
        android:textColor="#000000"
        android:textColorHint="@color/orange"
        android:id="@+id/SettingsSchoolName"
        android:clickable="false"
        android:paddingLeft="10dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:background="@drawable/border"
        android:layout_below="@+id/SettingsHeaderSchool"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Group Study"
        android:id="@+id/groupStudy"
        android:checked="false"
        android:layout_below="@+id/SettingsDivider"
        android:layout_above="@+id/SettingsHeader"
        android:layout_alignRight="@+id/SettingsSchoolName"
        android:layout_alignEnd="@+id/SettingsSchoolName" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/phone"
        android:layout_toRightOf="@+id/phone"
        android:layout_toEndOf="@+id/phone" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:hint="Email"
        android:id="@+id/SignUpEmailInput"
        android:textColor="#000000"
        android:textColorHint="@color/orange"
        android:paddingLeft="10dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:background="@drawable/border"
        android:layout_below="@+id/SettingsHeaderEmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="School Name"
        android:id="@+id/SettingsHeaderSchool"
        android:textSize="20dp"
        android:layout_below="@+id/tutor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:id="@+id/SettingsHeaderEmail"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>