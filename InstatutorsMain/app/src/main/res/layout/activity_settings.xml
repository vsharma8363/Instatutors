<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/orange"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="greycubelabs.tutor.instatutors.Settings"
    android:touchscreenBlocksFocus="false">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/SettingsScrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instatutors"
                android:id="@+id/SettingsTitle"
                android:textSize="40dp"
                android:layout_marginTop="12dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/SettingsTitle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:id="@+id/SettingsDivider">

                <View
                    android:layout_weight="40"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#000000"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:gravity="center_vertical"
                    android:layout_marginTop="15dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Settings"
                    android:id="@+id/SettingsTextDivider"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="25dp"/>

                <View
                    android:layout_weight="40"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#000000"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:gravity="center_vertical"
                    android:layout_marginTop="15dp"
                    />

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/SettingsCheckBoxLayout"
                android:layout_marginTop="20dp"
                android:layout_below="@id/SettingsDivider">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tutor"
                    android:textColor="#000000"
                    android:layout_marginLeft="38dp"
                    android:id="@+id/SettingsTutorCheckBoxLabel"
                    android:textSize="15dp"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/SettingsTutorSelectionCheckBox"
                    android:checked="false"
                    android:onClick="onCheckBoxClicked"
                    android:layout_below="@+id/SettingsDivider"
                    android:layout_marginLeft="23dp"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/SettingsTuteeSelectionCheckBox"
                    android:checked="false"
                    android:onClick="onCheckBoxClicked"
                    android:layout_below="@+id/SettingsDivider"
                    android:layout_marginLeft="68dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tutee"
                    android:textColor="#000000"
                    android:layout_marginLeft="23dp"
                    android:id="@+id/SettingsTuteeCheckBoxLabel"
                    android:textSize="15dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="School Name"
                android:id="@+id/SettingsSchoolLabel"
                android:textSize="20dp"
                android:layout_below="@id/SettingsCheckBoxLayout"
                android:layout_marginTop="20dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="School Name"
                android:textColor="#000000"
                android:textColorHint="@color/orange"
                android:id="@+id/SettingsSchoolEditText"
                android:clickable="false"
                android:paddingLeft="10dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:background="@drawable/border"
                android:layout_below="@id/SettingsSchoolLabel"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:id="@+id/SettingsEmailLabel"
                android:textSize="20dp"
                android:layout_centerVertical="true"
                android:layout_below="@id/SettingsSchoolEditText"
                android:layout_marginTop="30dp"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Email"
                android:id="@+id/SettingsEmailEditText"
                android:textColor="#000000"
                android:textColorHint="@color/orange"
                android:paddingLeft="10dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:background="@drawable/border"
                android:layout_below="@+id/SettingsEmailLabel"
                android:layout_marginTop="15dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change Subjects"
                android:id="@+id/SettingsChangeSettingsButton"
                android:layout_below="@+id/SettingsEmailEditText"
                android:layout_marginTop="40dp"
                android:background="@drawable/border"
                android:textSize="15dp"
                android:onClick="chemistrySelection"
                android:textColor="@color/orange" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm Password"
                android:id="@+id/SettingsConfirmPasswordLabel"
                android:textSize="20dp"
                android:layout_below="@id/SettingsChangeSettingsButton"
                android:layout_marginTop="60dp"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter Password"
                android:id="@+id/SettingsConfirmPasswordEditText"
                android:textColor="#000000"
                android:textColorHint="@color/orange"
                android:paddingLeft="10dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:background="@drawable/border"
                android:layout_below="@+id/SettingsConfirmPasswordLabel"
                android:layout_marginTop="15dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm Changes"
                android:id="@+id/SettingsConfirmChangesButton"
                android:layout_below="@+id/SettingsConfirmPasswordEditText"
                android:layout_marginTop="50dp"
                android:background="@drawable/button"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>