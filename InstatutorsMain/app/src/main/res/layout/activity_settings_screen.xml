<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/orange"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="greycubelabs.tutor.instatutors.Signup">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/SignUpScrollView">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instatutors"
                android:id="@+id/SignUpTitle"
                android:textSize="40dp"
                android:layout_marginTop="12dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/SignUpTitle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:id="@+id/SignUpDivider">

                <View
                    android:layout_weight="40"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#000000"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:gravity="center_vertical"
                    android:layout_marginTop="15dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Settings"
                    android:id="@+id/SignUpTextDivider"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="25dp"/>

                <View
                    android:layout_weight="40"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#000000"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:gravity="center_vertical"
                    android:layout_marginTop="15dp"
                    />

            </LinearLayout>

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:id="@+id/SignUpNameEmail"
            android:layout_below="@+id/SignUpNameLayout"
            android:layout_marginTop="20dp"
            android:textSize="20dp"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:hint="Email"
                android:id="@+id/SignUpEmailInput"
                android:textColor="#000000"
                android:textColorHint="@color/orange"
                android:paddingLeft="10dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:background="@drawable/border"
                android:layout_below="@id/SignUpNameEmail"
                android:layout_marginTop="15dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Name"
                android:layout_marginTop="15dp"
                android:id="@+id/SignUpNameLayout"
                tools:context="fbla.hhs.eclat.Signup">


            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="School"
                android:id="@+id/schoolText"
                android:layout_below="@+id/SignUpNameLayout"
                android:layout_marginTop="20dp"
                android:textSize="20dp"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:hint="School Name"
                android:textColor="#000000"
                android:textColorHint="@color/orange"
                android:id="@+id/SchoolName"
                android:paddingLeft="10dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:background="@drawable/border"

                android:layout_marginTop="15dp" />

            <Space
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Change Subjects"
                android:onClick="changeSubjects"
                android:id="@+id/ChangeSubjects"
                android:background="@drawable/button"
                android:textColor="#FFFFFF"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:textSize="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Continue"
                android:onClick="SubmitSignup"
                android:id="@+id/SignUpSubmit"
                android:background="@drawable/button"
                android:textColor="#FFFFFF"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:textSize="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

        </LinearLayout>
    </ScrollView>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/SignUpScrollView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="510dp"></GridLayout>



</RelativeLayout>
