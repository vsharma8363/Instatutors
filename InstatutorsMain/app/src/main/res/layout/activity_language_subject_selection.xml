<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/orange"
    tools:context="greycubelabs.com.instatutors.LanguageSubjectSelection">

<ScrollView
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:id="@+id/LanguagesSelectionScrollView">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instatutors"
        android:id="@+id/LanguagesSelectionTitle"
        android:textSize="40dp"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LanguagesSelectionTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/LanguagesSelectionDivider">

        <View
            android:layout_weight="40"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Languages"
            android:id="@+id/LanguagesSelectionTextDivider"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="25dp"/>

        <View
            android:layout_weight="40"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            />

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:text="Spanish"
        android:id="@+id/LanguageSelectionSpanishButton"
        android:layout_below="@id/LanguagesSelectionDivider"
        android:layout_marginTop="50dp"
        android:background="@drawable/selectionbutton"
        android:textSize="15dp"
        android:onClick="spanishSelection"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:text="French"
        android:id="@+id/LanguageSelectionFrenchButton"
        android:layout_below="@+id/LanguageSelectionSpanishButton"
        android:layout_marginTop="50dp"
        android:background="@drawable/selectionbutton"
        android:textSize="15dp"
        android:onClick="frenchSelection"/>

    <Button
        android:layout_width="365dp"
        android:layout_height="34dp"
        android:text="Japanese"
        android:id="@+id/LanguageSelectionJapaneseButton"
        android:layout_below="@+id/LanguageSelectionFrenchButton"
        android:layout_marginTop="50dp"
        android:background="@drawable/selectionbutton"
        android:textSize="15dp"
        android:onClick="japaneseSelection" />

    <Button
        android:layout_width="365dp"
        android:layout_height="34dp"
        android:text="Chinese"
        android:id="@+id/LanguageSelectionChineseButton"
        android:layout_below="@+id/LanguageSelectionJapaneseButton"
        android:layout_marginTop="50dp"
        android:background="@drawable/selectionbutton"
        android:textSize="15dp"
        android:onClick="chineseSelection" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go Back"
        android:id="@+id/LanguageGoBackButton"
        android:layout_below="@+id/LanguageSelectionChineseButton"
        android:layout_marginTop="50dp"
        android:background="@drawable/button"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:paddingBottom="7dp"
        android:paddingTop="7dp"/>


</LinearLayout>
</ScrollView>
</RelativeLayout>
