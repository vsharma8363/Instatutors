<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="fbla.hhs.eclat.Signup">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:onClick="SubmitSignup"
        android:id="@+id/Submit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Full Name"
        android:ems="10"
        android:id="@+id/FullNameSignup"
        android:layout_alignParentTop="true"
        android:layout_marginTop="43dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/Submit"
        android:layout_alignEnd="@+id/Submit" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:hint="Email"
        android:id="@+id/EmailSignup"
        android:layout_below="@+id/FullNameSignup"
        android:layout_marginTop="90dp"
        android:layout_alignRight="@+id/FullNameSignup"
        android:layout_alignEnd="@+id/FullNameSignup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Password"
        android:id="@+id/PasswordSignup"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Password Confirm"
        android:id="@+id/PasswordConfirmSignup"
        android:layout_below="@+id/PasswordSignup"
        android:layout_marginTop="59dp"
        android:layout_alignRight="@+id/PasswordSignup"
        android:layout_alignEnd="@+id/PasswordSignup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Already have an account? Click here"
        android:id="@+id/WarningSignup"
        android:onClick="HaveAnAccount"
        android:layout_above="@+id/Submit"
        android:layout_toLeftOf="@+id/Submit"
        android:layout_toStartOf="@+id/Submit" />

</RelativeLayout>
