<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/orange"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="fbla.hhs.eclat.Signup">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instatutors"
                android:id="@+id/Title"
                android:textSize="40dp"
                android:layout_marginTop="12dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:id="@+id/Divider">

                <View
                    android:layout_weight="40"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#000000"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:gravity="center_vertical"
                    android:layout_marginTop="15dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Sign Up"
                    android:id="@+id/sign_up"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="25dp"/>

                <View
                    android:layout_weight="40"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#000000"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:gravity="center_vertical"
                    android:layout_marginTop="15dp"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:id="@+id/Name"
                android:layout_below="@+id/Divider"
                android:layout_marginTop="15dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="20dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Name"
                android:layout_marginTop="15dp"
                android:id="@+id/NameSignup"
                tools:context="fbla.hhs.eclat.Signup">


                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".40"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:hint="First Name"
                    android:textColor="#000000"
                    android:textColorHint="@color/orange"
                    android:id="@+id/FirstNameSignup"
                    android:layout_above="@+id/EmailSignup"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:clickable="false"
                    android:paddingLeft="10dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:background="@drawable/border"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".40"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:hint="Last Name"
                    android:textColor="#000000"
                    android:textColorHint="@color/orange"
                    android:id="@+id/LastNameSignup"
                    android:layout_above="@+id/EmailSignup"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:clickable="false"
                    android:paddingLeft="10dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:background="@drawable/border"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:id="@+id/Email"
                android:layout_below="@+id/NameSignup"
                android:layout_marginTop="20dp"
                android:textSize="20dp"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:hint="Email"
                android:id="@+id/EmailSignup"
                android:textColor="#000000"
                android:textColorHint="@color/orange"
                android:paddingLeft="10dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:background="@drawable/border"
                android:layout_below="@id/Email"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:id="@+id/Password"
                android:textSize="20dp"
                android:layout_below="@+id/EmailSignup"
                android:layout_marginTop="20dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:hint="Password"
                android:textColor="#000000"
                android:textColorHint="@color/orange"
                android:id="@+id/PasswordSignup"
                android:paddingLeft="10dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:background="@drawable/border"
                android:layout_below="@id/Password"
                android:layout_marginTop="15dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:hint="Password Confirm"
                android:textColor="#000000"
                android:textColorHint="@color/orange"
                android:id="@+id/PasswordConfirmSignup"
                android:paddingLeft="10dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:background="@drawable/border"
                android:layout_below="@id/PasswordSignup"
                android:layout_marginTop="15dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Continue"
                android:onClick="SubmitSignup"
                android:id="@+id/Submit"
                android:layout_below="@id/PasswordConfirmSignup"
                android:layout_marginTop="30dp"
                android:background="@drawable/button"
                android:textColor="#FFFFFF"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:textSize="20dp"
                />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
